<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:forms="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:fonts="clr-namespace:Flexbaze.Fonts;assembly=Flexbaze"
             xmlns:Button="clr-namespace:Flexbaze.Models"
             xmlns:resources="clr-namespace:Flexbaze.Resources"
             xmlns:Conv="clr-namespace:Flexbaze.Converters"
             mc:Ignorable="d"
             x:Class="Flexbaze.Views.Dashboard">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Conv:OEEToColorConverter x:Key="ColorConverter"/>
            <Conv:IntToBoolConverter x:Key="BooleanConverter"/>
            <Conv:IncidentesToStringConverter x:Key="IncidentsConverter"/>
            <Conv:AccidentesToStringConverter x:Key="AccidentsConverter"/>
            <Conv:QtyToStringConverter x:Key="QtyConverter"/>
            <Conv:InverterConverter x:Key="InvConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <!--TitleBar-->
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand"
                Spacing="10">
            <Label
               Text="{x:Static resources:AppResources.DashboardPageTitle}"
               TextColor="White"
               FontSize="14"
               FontAttributes="Bold"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="Center"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
            BackgroundColor="Transparent"
            Margin="0">
            <!--Buttons-->
            <StackLayout Orientation="Horizontal"
                BackgroundColor="Transparent"
                Margin="10,0,10,0"
                HorizontalOptions="FillAndExpand">
                <Button:NormalTextButton x:Name="Btn_Today"
                    Text="{x:Static resources:AppResources.TodayButton}"
                    BackgroundColor="{StaticResource bright}"
                    BorderColor="{StaticResource bright}"
                    BorderWidth="1"
                    HeightRequest="40"
                    TextColor="{StaticResource TextMasterMenu}"
                    FontSize="14"
                    Visual="Material"
                    HorizontalOptions="FillAndExpand"
                    Clicked="BtnToday_Clicked"/>
                <Button:NormalTextButton x:Name="Btn_Week"
                    Text="{x:Static resources:AppResources.WeekButton}"
                    BackgroundColor="{StaticResource main}"
                    BorderColor="{StaticResource bright}"
                    BorderWidth="1"
                    FontSize="14"
                    HeightRequest="40"
                    TextColor="{StaticResource TextMasterMenu}"
                    Visual="Material"
                    HorizontalOptions="FillAndExpand"
                    Clicked="BtnWeek_Clicked"/>
                <Button:NormalTextButton x:Name="Btn_Month"
                    Text="{x:Static resources:AppResources.MonthButton}"
                    BackgroundColor="{StaticResource main}"
                    BorderColor="{StaticResource bright}"
                    TextColor="{StaticResource TextMasterMenu}"
                    BorderWidth="1"
                    FontSize="14"
                    HeightRequest="40"
                    Visual="Material"
                    HorizontalOptions="FillAndExpand"
                    Clicked="BtnMonth_Clicked"/>
            </StackLayout>
            <!--IncidentAndAccident-->
            <StackLayout BackgroundColor="Transparent"
                Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                IsVisible="{Binding ShowAccidents}"
                Padding="10,5,10,0">
                <Button:NormalTextButton Text="{Binding Incidents, Converter={StaticResource IncidentsConverter}}"
                    FontSize="14"
                    ImageSource="incident.png"
                    Clicked="BtnIncidents_Clicked"
                    BackgroundColor="{StaticResource Flexbaze-Yellow}"
                    Visual="Material"
                    HeightRequest="40"
                    TextColor="{StaticResource TextMasterMenu}"
                    IsVisible="{Binding Incidents, Converter={StaticResource BooleanConverter}}"
                    HorizontalOptions="FillAndExpand"
                    Padding="0,5,5,5"/>
                <Button:NormalTextButton Text="{Binding Accidents, Converter={StaticResource AccidentsConverter}}"
                    ImageSource="accident.png"
                    Clicked="BtnAccidents_Clicked"
                    FontSize="14"
                    HeightRequest="40"
                    TextColor="{StaticResource TextMasterMenu}"
                    IsVisible="{Binding Accidents, Converter={StaticResource BooleanConverter}}"
                    BackgroundColor="{StaticResource Flexbaze-Red}"
                    Visual="Material"
                    HorizontalOptions="FillAndExpand"
                    Padding="5,5,5,5"/>
            </StackLayout>
            <ScrollView Orientation="Vertical"
                BackgroundColor="Transparent"
                VerticalScrollBarVisibility="Always">
                <StackLayout Margin="0"
                    Orientation="Vertical">
                    <!--OEEPlant-->
                    <AbsoluteLayout>
                        <Frame Margin="10,5,10,0"
                            BackgroundColor="{StaticResource dark}"
                            AbsoluteLayout.LayoutBounds="1,1,1,1"
                            AbsoluteLayout.LayoutFlags="All"
                            Padding="0,5,5,0">
                            <StackLayout Orientation="Vertical"
                                BackgroundColor="Transparent">
                                <StackLayout Orientation="Horizontal"
                                     BackgroundColor="Transparent"
                                     Padding="10,0,0,10">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1"
                                            Tapped="BtnOEE_Clicked"/>
                                    </StackLayout.GestureRecognizers>
                                    <Label Text="{x:Static resources:AppResources.OEELabel}"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       VerticalOptions="StartAndExpand" 
                                       HorizontalOptions="StartAndExpand"/>
                                    <ImageButton Source="triangleDown.png"
                                         x:Name="imgBtnOEE"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="End"
                                         VerticalOptions="Start"
                                         Clicked="BtnOEE_Clicked"/>
                                </StackLayout>
                                <Label Text="62%"
                                    FontSize="60"
                                    TextColor="Red"
                                    FontAttributes="Bold"
                                    Margin="0,0"
                                    Padding="0,0"
                                    VerticalOptions="StartAndExpand" 
                                    HorizontalOptions="CenterAndExpand"/>
                                <StackLayout Orientation="Horizontal"
                                     BackgroundColor="Transparent"
                                     Padding="20,20,20,20">
                                    <StackLayout Orientation="Vertical"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="StartAndExpand">
                                        <Label Text="{x:Static resources:AppResources.TimeLabel}"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           VerticalOptions="StartAndExpand" 
                                           HorizontalOptions="CenterAndExpand"/>
                                        <Label Text="93%"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           VerticalOptions="StartAndExpand" 
                                           HorizontalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Vertical"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="CenterAndExpand">
                                        <Label Text="{x:Static resources:AppResources.SpeedLabel}"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           VerticalOptions="StartAndExpand" 
                                           HorizontalOptions="CenterAndExpand"/>
                                        <Label Text="78%"
                                           FontSize="24"
                                           TextColor="Red"
                                           FontAttributes="Bold"
                                           VerticalOptions="StartAndExpand" 
                                           HorizontalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Vertical"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="EndAndExpand">
                                        <Label Text="{x:Static resources:AppResources.QualityLabel}"
                                           FontSize="10"
                                           FontAttributes="Bold"
                                           VerticalOptions="StartAndExpand" 
                                           HorizontalOptions="CenterAndExpand"/>
                                        <Label Text="86%"
                                            FontSize="24"
                                            FontAttributes="Bold"
                                            VerticalOptions="StartAndExpand" 
                                            HorizontalOptions="CenterAndExpand"/>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </AbsoluteLayout>
                    <!--MachineStatus-->
                    <AbsoluteLayout VerticalOptions="FillAndExpand">
                        <Frame Margin="10,5,5,0"
                            x:Name="MachineStatus"
                            BackgroundColor="{StaticResource dark}"
                            AbsoluteLayout.LayoutBounds="0,0,.63,1"
                            AbsoluteLayout.LayoutFlags="All"
                            Padding="0">
                            <StackLayout Orientation="Vertical"
                                 BackgroundColor="Transparent">
                                <Label Text="{x:Static resources:AppResources.MachineStatusTitle}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   Padding="15,10,15,0"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="StartAndExpand"/>
                                <StackLayout Orientation="Horizontal"
                                     BackgroundColor="Transparent">
                                    <StackLayout Orientation="Vertical"
                                         BackgroundColor="Transparent"
                                         Padding="15,10,0,10"
                                         HorizontalOptions="StartAndExpand">
                                        <Label Text="16"
                                            FontSize="36"
                                            FontAttributes="Bold"
                                            VerticalOptions="StartAndExpand" 
                                            HorizontalOptions="CenterAndExpand"/>
                                        <StackLayout Orientation="Horizontal"
                                            BackgroundColor="Transparent">
                                            <BoxView BackgroundColor="{StaticResource Flexbaze-Green}"
                                                HeightRequest="10"
                                                WidthRequest="10"
                                                CornerRadius="5"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"/>
                                            <Label Text="{x:Static resources:AppResources.UpLabel}"
                                                FontSize="10"
                                                FontAttributes="Bold"
                                                VerticalOptions="StartAndExpand" 
                                                HorizontalOptions="StartAndExpand"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout Orientation="Vertical"
                                        BackgroundColor="Transparent"
                                        HorizontalOptions="CenterAndExpand"
                                        Padding="0,10,0,10">
                                        <Label Text="8"
                                            FontSize="36"
                                            FontAttributes="Bold"
                                            VerticalOptions="StartAndExpand" 
                                            HorizontalOptions="CenterAndExpand"/>
                                        <StackLayout Orientation="Horizontal"
                                            BackgroundColor="Transparent">
                                            <BoxView BackgroundColor="{StaticResource Flexbaze-Red}"
                                                HeightRequest="10"
                                                WidthRequest="10"
                                                CornerRadius="5"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"/>
                                            <Label Text="{x:Static resources:AppResources.DownLabel}"
                                                FontSize="10"
                                                FontAttributes="Bold"
                                                VerticalOptions="StartAndExpand" 
                                                HorizontalOptions="StartAndExpand"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout Orientation="Vertical"
                                         BackgroundColor="Transparent"
                                         Padding="0,10,15,10"
                                         HorizontalOptions="EndAndExpand">
                                        <Label Text="4"
                                            FontSize="36"
                                            FontAttributes="Bold"
                                            VerticalOptions="StartAndExpand" 
                                            HorizontalOptions="CenterAndExpand"/>
                                        <StackLayout Orientation="Horizontal"
                                             BackgroundColor="Transparent">
                                            <BoxView BackgroundColor="{StaticResource Flexbaze-Yellow}"
                                                HeightRequest="10"
                                                WidthRequest="10"
                                                CornerRadius="5"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"/>
                                            <Label Text="{x:Static resources:AppResources.IdleLabel}"
                                                FontSize="10"
                                                FontAttributes="Bold"
                                                VerticalOptions="StartAndExpand" 
                                                HorizontalOptions="StartAndExpand"/>
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                        <Frame Margin="5,5,10,0"
                            BackgroundColor="{StaticResource dark}"
                            x:Name="ScrapFrame"
                            AbsoluteLayout.LayoutBounds="1,0,.37,1"
                            AbsoluteLayout.LayoutFlags="All"
                            Padding="0">
                            <StackLayout Orientation="Vertical"
                                 BackgroundColor="Transparent"
                                 VerticalOptions="FillAndExpand">
                                <StackLayout Orientation="Horizontal"
                                    BackgroundColor="Transparent">
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer NumberOfTapsRequired="1"
                                            Tapped="btnScrapExpand_Clicked"/>
                                    </StackLayout.GestureRecognizers>
                                    <Label Text="{x:Static resources:AppResources.ScrapTitle}"
                                        FontSize="14"
                                        FontAttributes="Bold"
                                        Padding="15,10,10,10"
                                        VerticalOptions="CenterAndExpand" 
                                        HorizontalOptions="StartAndExpand"/>
                                    <ImageButton Source="triangleDown.png"
                                        HorizontalOptions="End"
                                        VerticalOptions="Start"
                                        BackgroundColor="Transparent"
                                        Padding="0,5,5,0"
                                        Clicked="btnScrapExpand_Clicked"/>
                                </StackLayout>
                                <Label Text="3.3%"
                                    FontSize="36"
                                    FontAttributes="Bold"
                                    Padding="10,0,10,10"
                                    VerticalOptions="Start" 
                                    HorizontalOptions="CenterAndExpand"/>
                            </StackLayout>
                        </Frame>
                        <Frame Margin="10,5,5,0"
                            BackgroundColor="{StaticResource dark}"
                            AbsoluteLayout.LayoutBounds="0,0,1,1"
                            AbsoluteLayout.LayoutFlags="All"
                            x:Name="MachineStatusExpanded"
                            IsVisible="false"
                            Padding="0">
                            <StackLayout Orientation="Vertical"
                                 BackgroundColor="Transparent">
                                <Label Text="{x:Static resources:AppResources.MachineStatusTitle}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   Padding="15,10,15,0"
                                   VerticalOptions="CenterAndExpand"
                                   HorizontalOptions="StartAndExpand"/>
                                <StackLayout Orientation="Horizontal"
                                     BackgroundColor="Transparent">
                                    <StackLayout Orientation="Vertical"
                                         BackgroundColor="Transparent"
                                         Padding="15,10,0,10"
                                         HorizontalOptions="StartAndExpand">
                                        <Label Text="16"
                                            FontSize="36"
                                            FontAttributes="Bold"
                                            VerticalOptions="StartAndExpand" 
                                            HorizontalOptions="CenterAndExpand"/>
                                        <StackLayout Orientation="Horizontal"
                                            BackgroundColor="Transparent">
                                            <BoxView BackgroundColor="{StaticResource Flexbaze-Green}"
                                                HeightRequest="10"
                                                WidthRequest="10"
                                                CornerRadius="5"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"/>
                                            <Label Text="{x:Static resources:AppResources.UpLabel}"
                                               FontSize="10"
                                               FontAttributes="Bold"
                                               VerticalOptions="StartAndExpand" 
                                               HorizontalOptions="StartAndExpand"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout Orientation="Vertical"
                                        BackgroundColor="Transparent"
                                        HorizontalOptions="CenterAndExpand"
                                        Padding="0,10,0,10">
                                        <Label Text="8"
                                            FontSize="36"
                                            FontAttributes="Bold"
                                            VerticalOptions="StartAndExpand" 
                                            HorizontalOptions="CenterAndExpand"/>
                                        <StackLayout Orientation="Horizontal"
                                            BackgroundColor="Transparent">
                                            <BoxView BackgroundColor="{StaticResource Flexbaze-Red}"
                                                HeightRequest="10"
                                                WidthRequest="10"
                                                CornerRadius="5"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"/>
                                            <Label Text="{x:Static resources:AppResources.DownLabel}"
                                               FontSize="10"
                                               FontAttributes="Bold"
                                               VerticalOptions="StartAndExpand" 
                                               HorizontalOptions="StartAndExpand"/>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout Orientation="Vertical"
                                         BackgroundColor="Transparent"
                                         Padding="0,10,15,10"
                                         HorizontalOptions="EndAndExpand">
                                        <Label Text="4"
                                           FontSize="36"
                                           FontAttributes="Bold"
                                           VerticalOptions="StartAndExpand" 
                                           HorizontalOptions="CenterAndExpand"/>
                                        <StackLayout Orientation="Horizontal"
                                             BackgroundColor="Transparent">
                                            <BoxView BackgroundColor="{StaticResource Flexbaze-Yellow}"
                                                HeightRequest="10"
                                                WidthRequest="10"
                                                CornerRadius="5"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"/>
                                            <Label Text="{x:Static resources:AppResources.IdleLabel}"
                                               FontSize="10"
                                               FontAttributes="Bold"
                                               VerticalOptions="StartAndExpand" 
                                               HorizontalOptions="StartAndExpand"/>
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </AbsoluteLayout>
                    <!--ScrapCauses-->
                    <AbsoluteLayout x:Name="ScrapExpanded"
                        IsVisible="false">
                        <Frame Margin="10,5,10,0"
                            BackgroundColor="{StaticResource dark}"
                            AbsoluteLayout.LayoutBounds="1,1,1,1"
                            AbsoluteLayout.LayoutFlags="All"
                            Padding="0,5,5,0">
                            <StackLayout Orientation="Vertical"
                                BackgroundColor="Transparent">
                                <StackLayout Orientation="Vertical"
                                    BackgroundColor="Transparent">
                                    <StackLayout Orientation="Horizontal"
                                         BackgroundColor="Transparent"
                                         Padding="10,0,0,0">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                                Tapped="BtnScrap_Clicked"/>
                                        </StackLayout.GestureRecognizers>
                                        <Label Text="{x:Static resources:AppResources.ScrapCausesTitle}"
                                             FontSize="14"
                                             FontAttributes="Bold"
                                             VerticalOptions="StartAndExpand" 
                                             HorizontalOptions="StartAndExpand"/>
                                        <ImageButton Source="triangleUp.png"
                                             x:Name="imgBtnScrap"
                                             BackgroundColor="Transparent"
                                             HorizontalOptions="End"
                                             VerticalOptions="Start"
                                             Clicked="BtnScrap_Clicked"/>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal"
                                         BackgroundColor="Transparent"
                                         HorizontalOptions="FillAndExpand"
                                         VerticalOptions="End"
                                         Padding="10,10,10,0">
                                        <CollectionView SelectionMode="None"
                                            HeightRequest="{Binding HeightScrapList}"
                                            BackgroundColor="Transparent"
                                            ItemsSource="{Binding ScrapList}"
                                            HorizontalOptions="Start"
                                            VerticalOptions="Start">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid WidthRequest="100">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <BoxView BackgroundColor="{Binding ColorLabel}"
                                                                WidthRequest="10"
                                                                HeightRequest="10"
                                                                CornerRadius="5"
                                                                Grid.Column="0"
                                                                VerticalOptions="CenterAndExpand"/>
                                                        <Label Text="{Binding Name}"
                                                                Grid.Column="1"
                                                                VerticalOptions="End"
                                                                Padding="10,5,0,5"
                                                                FontSize="14"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                        <forms:ChartView x:Name="scrapChart"
                                            Margin="0,0,0,10"
                                            WidthRequest="{Binding HeightScrapChart}"
                                            HorizontalOptions="EndAndExpand"
                                            VerticalOptions="FillAndExpand"/>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </AbsoluteLayout>
                    <!--OEECells-->
                    <AbsoluteLayout>
                        <Frame Margin="10,5,10,0"
                            BackgroundColor="{StaticResource dark}"
                            AbsoluteLayout.LayoutBounds="1,1,1,1"
                            AbsoluteLayout.LayoutFlags="All"
                            Padding="0,5,5,0">
                            <StackLayout Orientation="Vertical"
                                BackgroundColor="Transparent">
                                <StackLayout Orientation="Vertical"
                                     BackgroundColor="Transparent"
                                     x:Name="OEENormal"
                                     IsVisible="true">
                                    <StackLayout Orientation="Horizontal"
                                         BackgroundColor="Transparent"
                                         Padding="10,0,0,10">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                                Tapped="btnOEEUpToDown_Clicked"/>
                                        </StackLayout.GestureRecognizers>
                                        <Label Text="{x:Static resources:AppResources.OEECellsTitle}"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            VerticalOptions="StartAndExpand" 
                                            HorizontalOptions="StartAndExpand"
                                            Padding="0,0,0,10"/>
                                        <ImageButton Source="triangleDown.png"
                                             x:Name="imgBtnOEEUpToDown"
                                             BackgroundColor="Transparent"
                                             HorizontalOptions="End"
                                             VerticalOptions="Start"
                                             Clicked="btnOEEUpToDown_Clicked"/>
                                    </StackLayout>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{x:Static resources:AppResources.CellLabel}"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            VerticalOptions="End" 
                                            HorizontalOptions="Center"
                                            Padding="0,0,0,0"
                                            Grid.ColumnSpan="2"
                                            Grid.Column="0">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                                    Command="{Binding CmdOrder}"
                                                    CommandParameter="Name"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <Label Text="{x:Static resources:AppResources.ProgressLabel}"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            VerticalOptions="End" 
                                            HorizontalOptions="Center"
                                            Padding="0,0,0,0"
                                            Grid.Column="2">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                                    Command="{Binding CmdOrder}"
                                                    CommandParameter="Progress"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <Label Text="{x:Static resources:AppResources.OEELabel}"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            VerticalOptions="End" 
                                            HorizontalOptions="Center"
                                            Padding="0,0,5,0"
                                            Grid.Column="3">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                                    Command="{Binding CmdOrder}"
                                                    CommandParameter="OEE"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                    </Grid>
                                    <CollectionView
                                        SelectionMode="None"
                                        BackgroundColor="Transparent"
                                        HeightRequest="{Binding HeightListViewOEE}"
                                        ItemsSource="{Binding CellList}"
                                        VerticalOptions="Start">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="20"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="50"/>
                                                    </Grid.ColumnDefinitions>
                                                    <BoxView BackgroundColor="{Binding Status}"
                                                        WidthRequest="10"
                                                        HeightRequest="10"
                                                        CornerRadius="5"
                                                        Grid.Column="0"
                                                        Margin="10,10,0,10"
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Center"/>
                                                    <Label Text="{Binding Name}"
                                                        FontSize="14"
                                                        Padding="10,0,0,0"
                                                        Grid.Column="1"   
                                                        VerticalOptions="Center" 
                                                        HorizontalOptions="Start">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                                                Command="{Binding CmdOrder}"
                                                                CommandParameter="Name"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                    <AbsoluteLayout
                                                        BackgroundColor="Transparent"
                                                        HorizontalOptions="FillAndExpand"
                                                        VerticalOptions="Center"
                                                        Grid.Column="2"
                                                        Margin="0,0,0,0">
                                                        <AbsoluteLayout.GestureRecognizers>
                                                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                                                Command="{Binding CmdOrder}"
                                                                CommandParameter="Progress"/>
                                                        </AbsoluteLayout.GestureRecognizers>
                                                        <BoxView BackgroundColor="{StaticResource main}"
                                                            HeightRequest="5"
                                                            AbsoluteLayout.LayoutBounds="0,0,1,5"
                                                            Margin="10,0,10,0"
                                                            AbsoluteLayout.LayoutFlags="WidthProportional, XProportional, YProportional"
                                                            VerticalOptions="EndAndExpand"/>
                                                        <BoxView BackgroundColor="{Binding Status}"
                                                            HeightRequest="5"
                                                            Margin="10,0,10,0"
                                                            AbsoluteLayout.LayoutBounds="{Binding Progress}"
                                                            AbsoluteLayout.LayoutFlags="WidthProportional, XProportional, YProportional"
                                                            VerticalOptions="EndAndExpand"/>
                                                    </AbsoluteLayout>
                                                    <Label Text="{Binding OEE}"
                                                        FontSize="14"
                                                        Grid.Column="3"
                                                        TextColor="{Binding OEE, Converter={StaticResource ColorConverter}}"
                                                        VerticalOptions="CenterAndExpand" 
                                                        HorizontalOptions="Center">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                                                Command="{Binding CmdOrder}"
                                                                CommandParameter="OEE"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                                <StackLayout Orientation="Vertical"
                                     BackgroundColor="Transparent"
                                     x:Name="OEEExpand"
                                     IsVisible="false"
                                     HorizontalOptions="FillAndExpand">
                                    <StackLayout Orientation="Horizontal"
                                         BackgroundColor="Transparent"
                                         Padding="10,0,0,10">
                                        <StackLayout.GestureRecognizers>
                                            <TapGestureRecognizer NumberOfTapsRequired="1"
                                                Tapped="btnOEEUpToDownExpand_Clicked"/>
                                        </StackLayout.GestureRecognizers>
                                        <Label Text="{x:Static resources:AppResources.OEECellsTitle}"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            VerticalOptions="StartAndExpand" 
                                            HorizontalOptions="StartAndExpand"
                                            Padding="0,0,0,10"/>
                                        <ImageButton Source="triangleUp.png"
                                            x:Name="imgBtnOEEUpToDownExpand"
                                            BackgroundColor="Transparent"
                                            HorizontalOptions="End"
                                            VerticalOptions="Start"
                                            Clicked="btnOEEUpToDownExpand_Clicked"/>
                                    </StackLayout>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Text="{x:Static resources:AppResources.CellLabel}"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            VerticalOptions="End" 
                                            HorizontalOptions="Center"
                                            Padding="0,0,0,0"
                                            Grid.ColumnSpan="2"
                                            Grid.Column="0">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                                    Command="{Binding CmdOrder}"
                                                    CommandParameter="Name"/>
                                            </Label.GestureRecognizers>
                                        </Label>
                                        <Label Text="{x:Static resources:AppResources.OEELabel}"
                                            FontSize="14"
                                            FontAttributes="Bold"
                                            VerticalOptions="End" 
                                            HorizontalOptions="Center"
                                            Padding="5,0,0,0"
                                            Grid.Column="2">
                                            <Label.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                                    Command="{Binding CmdOrder}"
