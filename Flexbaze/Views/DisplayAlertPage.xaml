<?xml version="1.0" encoding="utf-8" ?>
<pg:PopupPage  xmlns:pg="http://rotorgames.com" xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 BackgroundColor="Transparent"
                 x:Class="Flexbaze.Views.DisplayAlertPage"
                 x:Name="ThisPopUpPage" >
    <StackLayout x:Name="stack">

        <StackLayout Padding="30" Margin="20,0,20,0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Background="{StaticResource main}">
            <Label x:Name="TitleAlert" Text="" FontAttributes="Bold" FontSize="16" HorizontalOptions="CenterAndExpand"/>
            <Label x:Name="Message" Text="" FontSize="14" HorizontalOptions="CenterAndExpand" Margin="0,10,0,0"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" Margin="0,10,0,0">
                <Button x:Name="opOne" ClassId="1" Text="" BorderColor="{StaticResource bright}" BorderWidth="1" HorizontalOptions="FillAndExpand">
                </Button>
                <Button x:Name="opTwo" BackgroundColor="{StaticResource bright}" Text="" HorizontalOptions="FillAndExpand">
                </Button>
            </StackLayout>
        </StackLayout>

    </StackLayout>
</pg:PopupPage>